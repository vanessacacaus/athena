package src{	import flash.net.URLLoader;	import flash.net.URLRequest;	import flash.events.Event;	public class CarregaXML	{		public var vetCaminho:Array = new Array();				public var vetQuestoes:Array = new Array();		//public var vetAlternativas:Array = new Array();		var obj:Object;		var numCerta:Number;				public var introducao:String = "";		public var ajuda:String = "";		public var nome:String = "";		public function CarregaXML ():void		{		}		public function caminhoSWF (caminho:String)		{			//============================  XML  =====================			//Cria o Loader e coloca um listener pra quando ele estiver pronto.			var loader:URLLoader = new URLLoader();			//loader.dataFormat = URLLoaderDataFormat.TEXT;			loader.addEventListener (Event.COMPLETE, onLoadXML);			loader.load (new URLRequest(caminho));			function onLoadXML (evt:Event)			{				//Coloca os valores do XML no XMLList				var myXML:XML = new XML(evt.target.data);				var list:XMLList = new XMLList(myXML);				//Coloca os valores da Lista no vetor apropriado.				for (var i=0; i<list[0].imagem.length(); i++)				{					vetCaminho.push (list[0].imagem[i].caminho);				}			}		}		public function carregaJogo (caminho:String)		{			//============================  XML  =====================			//Cria o Loader e coloca um listener pra quando ele estiver pronto.			var loader:URLLoader = new URLLoader();			//loader.dataFormat = URLLoaderDataFormat.TEXT;			loader.addEventListener (Event.COMPLETE, onLoadXML);			loader.load (new URLRequest(caminho));			function onLoadXML (evt:Event)			{				//Coloca os valores do XML no XMLList				var myXML:XML = new XML(evt.target.data);				var list:XMLList = new XMLList(myXML);				//Coloca os valores da Lista no vetor apropriado.								introducao = list[0].intro.texto;				ajuda = list[0].ajuda;				nome = list[0].nome;								for (var i=0; i<list[0].questoes.questao.length(); i++)				{					//vetCaminho.push (list[0].questoes.questao[i].enunciado);										obj = new Object();					obj.enunciado = list[0].questoes.questao[i].enunciado;					obj.alternativa1 = list[0].questoes.questao[i].alternativas.alternativa.texto[0];					obj.alternativa2 = list[0].questoes.questao[i].alternativas.alternativa.texto[1];					obj.alternativa3 = list[0].questoes.questao[i].alternativas.alternativa.texto[2];					obj.alternativa4 = list[0].questoes.questao[i].alternativas.alternativa.texto[3];					obj.alternativa5 = list[0].questoes.questao[i].alternativas.alternativa.texto[4];					obj.feedBack0 = list[0].questoes.questao[i].alternativas.alternativa.feedback[0];					obj.feedBack1 = list[0].questoes.questao[i].alternativas.alternativa.feedback[1];					obj.feedBack2 = list[0].questoes.questao[i].alternativas.alternativa.feedback[2];					obj.feedBack3 = list[0].questoes.questao[i].alternativas.alternativa.feedback[3];					obj.feedBack4 = list[0].questoes.questao[i].alternativas.alternativa.feedback[4];										vetQuestoes.push(obj);										//trace ("ENUN - "+list[0].questoes.questao[i].enunciado);					for (var j=0; j<list[0].questoes.questao[i].alternativas.alternativa.length(); j++)					{						//trace ("ALTER - "+list[0].questoes.questao[i].alternativas.alternativa.texto[j]);						if (list[0].questoes.questao[i].alternativas.alternativa[j].attribute("valor") == "correta")						{							//trace("CERTA", j, list[0].questoes.questao[i].alternativas.alternativa[j].attribute("valor"));							numCerta = j;						}					}					obj.certa = numCerta;				}								//trace(vetQuestoes);				//trace(vetQuestoes[0].enunciado);				//trace(vetQuestoes[0].alternativa1);				//trace(vetQuestoes[0].feedBack1);				//trace(vetQuestoes[0].certa);			}		}	}}
package src{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.events.FocusEvent;	import flash.display.SimpleButton;	//import flash.accessibility.AccessibilityProperties;	import flash.text.TextField;	import flash.net.URLRequest;	import flash.net.URLLoader;	import src.*;	public class Ajuda extends MovieClip	{		//public var numeroQuadro:Number = 4;		private var objetoPrincipal:Object;		//public var accessProps:AccessibilityProperties;				public function Ajuda ():void		{			///garante que os objetos globais de Principal (como o vetor de caminha de imagem) estejam carregados, depois monta o swf.			addEventListener (Event.ADDED_TO_STAGE, iniciar);				}		function iniciar (evt:Event)		{			objetoPrincipal =  parent.parent.parent;						objetoPrincipal.pulse.visible = false;						//objetoPrincipal.proxima.addEventListener(MouseEvent.CLICK, objetoPrincipal.proximaFC);			objetoPrincipal.proxima.enabled = false;						carregaAjuda();						objetoPrincipal.iniciaPosicoes ();		}				function carregaAjuda ()		{			textoAjuda.htmlText = objetoPrincipal.acertaTags(objetoPrincipal.xmlEstrutura.ajuda);			barraScroll.update ();						}		function apagaTexto (evt:Event)		{			textoAjuda.htmlText = "";		}			}}
package caca {	import flash.display.SimpleButton;	import flash.text.TextField;	import flash.display.Sprite;		public class Util {		public static function randi(a:int, b:int):int		{			return (Math.floor (Math.random ( ) * (b - a)) + Math.floor (a));		}						public static function reverseString(str:String):String 		{			var _str:String = "";			for (var j = (str.length - 1); j >= 0; j--)	_str += str.charAt (j);			return (_str);		}								public static function shuffle(vetor:Array)		{			for (var j = 0; j < vetor.length; j++)	swap (vetor, j, randi (0, vetor.length));		}					static function swap(vetor:Array, a:int, b:int):void		{			var temp = vetor[a];			vetor[a] = vetor[b];			vetor[b] = temp;		}					public static function clonarArray(vetor:Array):Array		{			var _array:Array = new Array ( );			for (var j = 0; j < vetor.length; j++)	_array[j] = vetor[j];			return (_array);		}									public static function formatarDataBr(d:Date):String {			var dia:String = String(d.getDate());			if(dia.length == 1) {				dia = "0" + dia;			}				var mes:String = String(d.getMonth()+1);			if(mes.length == 1) {				mes = "0" + mes;			}			return dia+"/"+mes+"/"+d.getFullYear();		}								public static function trim(s:String):String {			return s.split(" ").join(" ");		}									}}
package caca {	import flash.display.MovieClip;	import flash.events.KeyboardEvent;	import flash.events.MouseEvent;	import flash.ui.Keyboard;		import caca.CacaPalavras;		public class Botoes extends MovieClip{		var foco:MovieClip;				public function Botoes() {			botonizar(btn_fechar);			botonizar(btn_relatorio);			botonizar(btn_ajuda);					foco = null;		}				function botonizar(mc:MovieClip):void {			mc.buttonMode = true;			mc.useHandCursor = true;		}				public function _gerenciarTeclado(e:KeyboardEvent):void {			switch (e.keyCode) {				case Keyboard.ENTER:					if(foco == btn_ajuda) {						desfocar();						(parent as MovieClip).desfocar();						clicar(btn_ajuda);					}					if(foco == btn_fechar) {						desfocar();						(parent as MovieClip).desfocar();						clicar(btn_fechar);					}					if(foco == btn_relatorio) {						desfocar();						(parent as MovieClip).desfocar();												clicar(btn_relatorio);					}														break;				case Keyboard.DOWN:				case Keyboard.RIGHT:					if(foco==null || foco==btn_fechar)						focar(btn_relatorio);					else 						if(foco == btn_ajuda) 							focar(btn_fechar);						else							focar(btn_ajuda);										break;				case Keyboard.UP:				case Keyboard.LEFT:					if(foco==null || foco==btn_relatorio)						focar(btn_fechar);					else 						if(foco == btn_ajuda) 							focar(btn_relatorio);						else							focar(btn_ajuda);				break;			}		}				function clicar(mc:MovieClip):void {			var evt:MouseEvent = new MouseEvent(MouseEvent.CLICK);			mc.dispatchEvent(evt);		}				function focar(mc:MovieClip):void {			desfocar();			mc.gotoAndStop("_over");			foco = mc;		}		public function desfocar():void {			if(foco != null) {				foco.gotoAndStop("_up");				foco = null;			}		}		}}
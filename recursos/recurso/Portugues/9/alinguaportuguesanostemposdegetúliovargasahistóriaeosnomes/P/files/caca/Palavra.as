package caca {	import flash.display.MovieClip;	import flash.display.Sprite;		import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.events.MouseEvent;	import caca.Frase;	/* 	 * Classe que representa uma palavra na tela	 */	public class Palavra extends MovieClip {		//var frase:Frase;		var texto:String;		var chave:String;		var _x_:int;		var _y_:int;				public function Palavra(palavra:String, chave:String) {			init();			setTexto(palavra);			setChave(chave);		}				function init() {			buttonMode = true;			useHandCursor = true;			mouseChildren = false;			txt_palavra.autoSize = TextFieldAutoSize.LEFT;		}				public function getTexto() {			return texto;		}						function setTexto(texto:String) {			this.texto = texto;			txt_palavra.htmlText = texto;					}				public function getChave() {			return chave;		}						function setChave(chave:String) {			this.chave = chave;		}			public function posicionar() {			x = _x_;			y = _y_;		}				public function focar():void {			txt_palavra.border = true;		}				public function desfocar():void {			txt_palavra.border = false;		}				public function selecionar():void {			txt_palavra.border = true;			txt_palavra.borderColor = 0x00FF00;		}	}}
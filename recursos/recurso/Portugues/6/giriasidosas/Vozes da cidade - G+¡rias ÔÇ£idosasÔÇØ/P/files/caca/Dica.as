package caca {	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class Dica extends MovieClip{		static var dica:Dica = null;		static var palco:MovieClip = null;		var objeto:MovieClip;				public function Dica() {			objeto = null;		}				public static function setPalco(palco:MovieClip) {			Dica.palco = palco;		}				public static function exibirDica(texto:String, obj:MovieClip):void {			exibirFeedback(texto, obj);		}				public static function exibirFeedback(texto:String, obj:MovieClip) {			if(dica == null) {				dica = new Dica();				dica.visible = false;				dica.addEventListener(MouseEvent.CLICK, onClick);				palco.addChild(dica);			}			dica.objeto = obj;			dica.x = obj.x + obj.width + 80;			dica.y = obj.y + 50;			if(dica.y > 150) 				dica.gotoAndStop("cima");			else {				dica.gotoAndStop("baixo");				dica.y += 180;			}			dica.txt_dica.htmlText = texto;			dica.visible = true;		}				static function onClick(e:MouseEvent):void {			ocultar();		}				public static function ocultar():Boolean {			if(dica != null) {				var original = dica.visible;								dica.visible = false;				// retorna true se realmente ocultou a dica					return (original != dica.visible); 			} 			else				return false		}			}	}
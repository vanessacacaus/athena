package caca {	import flash.display.MovieClip;	import flash.text.TextFieldAutoSize;		public class Letra extends MovieClip {		var letra:String;		var _x_:int; // posição x da letra na matriz		var _y_:int; // posição y da letra na matriz		public var estahNoBanco:Boolean;						public function Letra(){			init();		}				function init() {			txt_letra.autoSize = TextFieldAutoSize.LEFT;			estahNoBanco = false;					}				public function resetar(letra:String){			this.letra = letra;			txt_letra.text = letra;		}						/*			Coloca a letra em estado de válida		*/		public function letraValida():void {			gotoAndStop("valida");		}						/*			Coloca a letra em estado de não válida		*/		public function letraInvalida():void {			gotoAndStop("invalida");		}				/*			Coloca  a letra em estado neutro		*/		public function letraNeutra():void {			gotoAndStop("neutra");		}	}}
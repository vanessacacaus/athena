package caca {	import flash.display.MovieClip;	import flash.text.TextFieldAutoSize;		public class Placar extends MovieClip {		private var pontos:int;		private var pontosPorAcerto:int;		private var pontosPorErro:int;		private var acertos:int;		private var erros:int;				public function Placar() {			pontosPorAcerto = 10;			pontosPorErro = 5;			txt_pontos.autoSize = TextFieldAutoSize.LEFT;			zerar();		}						public function zerar():void {			pontos = 0;			acertos = 0;			erros = 0;			atualizar();		};				function atualizar():void {			txt_pontos.text = pontos.toString();		}						public function getPontos():int {			return pontos;		}				public function getAcertos():int {			return acertos;		}				public function getErros():int {			return erros;		}				public function acertar():void {			pontos += pontosPorAcerto;			acertos++;			atualizar();		}				public function errar():void {			pontos -= pontosPorErro;			erros++;			atualizar();		}					}}
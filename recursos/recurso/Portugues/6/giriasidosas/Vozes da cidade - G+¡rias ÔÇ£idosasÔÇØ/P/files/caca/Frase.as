package caca {	import flash.display.SimpleButton;	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.text.TextField;	import flash.events.MouseEvent;	import caca.Palavra;	import caca.Util;	/* 	 * Classe que representa uma frase na tela	 */	public class Frase extends MovieClip {		var palavra:Palavra;		private var texto:String;		private var dica:String;		private var feedback:String;				public function Frase(frase:String, dica:String, feedback:String) {			init();			trocarTexto(frase);			this.dica = dica;			this.feedback = feedback;		}		function init() {			buttonMode = true;			useHandCursor = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, onMouseOver);			addEventListener(MouseEvent.MOUSE_OUT, onMouseOut);			txt_frase.wordWrap = true;		}					function trocarTexto(texto:String) {			this.texto = texto;			txt_frase.htmlText = texto;		}						public function getTexto():String {			return texto;		}					public function getDica():String {			return dica;		}					public function getFeedback():String {			return feedback;		}						/* preenche a frase com a palavra certa */		function acertar() {			trocarTexto(getTexto().replace(/____/, "<font color='#FF0000'>" + palavra.getTexto() + '</font>'));		}				function onMouseOut(e:MouseEvent) {			gotoAndStop("up");		}				function onMouseOver(e:MouseEvent):void		{			if(e.buttonDown==true)			{				gotoAndStop('_circular');			} 		}				function focar():void {			gotoAndStop("_over");		}						function desfocar():void {			gotoAndStop("_up");		}			}			}